    "imagenes": ["/img/cervezas/golden1.webp", "/img/cervezas/golden2.webp"],
    "calibre": "473ml",
    "estilo": "Goleador",
    "ibu": 38,
    "cantidad": 100,
    "alcohol": 6,
    "premios": ["Medalla de Plata Copa Argentina 2016 "],
  }

